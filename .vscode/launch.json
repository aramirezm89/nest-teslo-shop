    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Nest Framework",
        "args": [
          "-r",
          "ts-node/register",
          "--inspect-brk",
          "${workspaceFolder}/src/main.ts" // Asegúrate que este sea tu punto de entrada
