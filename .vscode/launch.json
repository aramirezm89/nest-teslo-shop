        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "start:debug" // O usa la ruta al archivo que compila (dist/main.js)
        ],
        "console": "integratedTerminal",
        "sourceMaps": true,
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
        ]
      }
    ]
  }